@model FirstProject.Areas.LOC_State.Models.LOC_StateModel;

<form method="post">
    <div class="row">
        <div class="col-4">

            <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.List,"CountryID","CountryName"))">
                <option value="">Select Country</option>
            </select>
        </div>
        <div class="col-4">
            <input type="search" asp-for="StateName" class="form-control" placeholder="State Name">
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary fw-bold" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Index">Search</button>
        <a class="btn btn-secondary fw-bold" style="margin-left:7px" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Clear">Clear</a>
    </div>
</form>
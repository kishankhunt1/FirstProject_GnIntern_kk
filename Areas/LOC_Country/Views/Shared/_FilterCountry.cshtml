@model FirstProject.Areas.LOC_Country.Models.LOC_CountryModel;

<form method="post" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Search">
    <div class="row">
        <div class="col-4">
            <input type="search" name="CountryName" asp-for="CountryName" class="form-control" placeholder="Country Name">
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary fw-bold">Search</button>
        <a class="btn btn-secondary fw-bold" style="margin-left:7px" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Cancel">Clear</a>
    </div>
</form>
@{
    ViewData["Title"] = "StateEditMany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using FirstProject.Areas.LOC_State.Models;
@model List<LOC_StateModel>;


<section class="section">

    <div class="text-end">
        <a class="btn btn-outline-secondary mb-3" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Index">Cancel</a>
    </div>

    <form method="post" asp-area="LOC_State" asp-controller="LOC_State" asp-action="EditManyPost">
        <table class="table">
            <thead>
                <tr>
                    <th>Country Name</th>
                    <th>State Name</th>
                    <th>Last Modified</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @* <input type="hidden" class="form-control" name="State[@i].CountryID" value="@Model[i].CountryID" /> *@
                            <select id="State_CountryID" onchange="updateCountryID()" class="form-control" name="State[@i].CountryID"  asp-items="@(new SelectList(ViewBag.Countries,"Value","Text",Model[i].CountryName))"
                                    data-placeholder="Select Country">
                                <option value="">Select Country</option>
                            </select>
                        </td>
                        <td>
                            <input type="hidden" class="form-control" name="State[@i].StateID" value="@Model[i].StateID" />
                            <input type="text" class="form-control" name="State[@i].StateName" value="@Model[i].StateName" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="State[@i].Modified" value="@Model[i].Modified" readonly />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</section>
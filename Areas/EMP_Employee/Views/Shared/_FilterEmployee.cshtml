@model FirstProject.Areas.EMP_Employee.Models.EMP_EmployeeModel;

<form method="post" asp-area="EMP_Employee" asp-controller="EMP_Employee" asp-action="Search">
    <div class="row">

        <div class="col-4">
            <input type="search" asp-for="EmployeeName" class="form-control" placeholder="Employee Name" />
        </div>
        <div class="col-4">
            <select asp-for="Gender" class="form-control">
                <option value="" style="opacity:0.4"> Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        <div class="col-4">
            <input type="search" asp-for="EmployeeEmail" class="form-control" placeholder="Email" />
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary fw-bold">Search</button>
        <a class="btn btn-secondary fw-bold" style="margin-left:7px" asp-area="EMP_Employee" asp-controller="EMP_Employee" asp-action="Cancel">Clear</a>
    </div>
</form>
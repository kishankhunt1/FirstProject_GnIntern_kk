@{
    ViewData["Title"] = "EmployeeAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FirstProject.Areas.EMP_Employee.Models.EMP_EmployeeModel;

<section class="section">
    <p>
        @TempData["Success"]
    </p>
    <div class="">
        <div class="fs-2 ">
            Add Employee
        </div>
    </div>
    <hr />
    <div class="mt-4">
        <form method="post" asp-area="EMP_Employee" asp-controller="EMP_Employee" asp-action="Save">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeID" autocomplete="off" />

            <div class="row">
                <div class="col-6">
                    <div class="fw-bold"><label asp-for="EmployeeName">Employee Name</label><span class="text-danger fw-bold">*</span></div>
                    <div class="mt-2"><input type="text" class="form-control" asp-for="EmployeeName" autocomplete="off" /></div>
                    <span class="text-danger" asp-validation-for="EmployeeName"></span>
                </div>

                <div class="col-6">
                    <div class="fw-bold"><label asp-for="DepartmentID">Department Name</label><span class="text-danger fw-bold">*</span></div>
                    <select class="form-control mt-2" asp-for="DepartmentID" asp-items="@(new SelectList(ViewBag.List,"DepartmentID", "DepartmentName"))">
                        <option value="">
                            Select Department
                        </option>
                    </select>
                    <span class="text-danger" asp-validation-for="DepartmentID"></span>
                </div>
            </div>
            <div class="mt-4">
                <div class="fw-bold"><label asp-for="Hobby.HobbyID">Hobby Name</label><span class="text-danger fw-bold">*</span></div>
                <select class="form-control mt-2" asp-for="Hobby.HobbyID" asp-items="@(new SelectList(ViewBag.HobbyList,"HobbyID", "HobbyName"))">
                    <option value="">
                        Select Hobby
                    </option>
                </select>
                <span class="text-danger" asp-validation-for="Hobby.HobbyID"></span>
            </div>
            <div class="row">
                <div class="mt-4 col-6">
                    <div class="fw-bold"><label asp-for="EmployeeEmail">Employee Email</label><span class="text-danger fw-bold">*</span></div>
                    <div class="mt-2"><input type="email" class="form-control" asp-for="EmployeeEmail" autocomplete="off" /></div>
                    <span class="text-danger" asp-validation-for="EmployeeEmail"></span>
                </div>

                <div class="mt-4 col-6">
                    <div class="fw-bold"><label asp-for="MobileNo">Mobile No.</label><span class="text-danger fw-bold">*</span> <span class="text-danger">(must be 10 digits)</span></div>
                    <div class="mt-2"><input type="number" class="form-control" asp-for="MobileNo" autocomplete="off" /></div>
                    <span class="text-danger" asp-validation-for="MobileNo"></span>
                </div>

                <div class="row">
                    <div class="mt-4 col-6">
                        <div class="fw-bold"><label asp-for="Salary">Salary</label><span class="text-danger">*</span></div>
                        <div class="mt-2"><input type="number" class="form-control" asp-for="Salary" autocomplete="off" /></div>
                        <span class="text-danger" asp-validation-for="Salary"></span>
                    </div>

                    <div class="mt-4 col-6" style="padding-right:80px">
                        <div class="fw-bold">Gender<span class="text-danger fw-bold">*</span></div>
                        <div class="mt-2 m-3">
                            <span class="m-3"><input type="radio" value="Male" asp-for="Gender" /> Male</span>
                            <span class="m-3"><input type="radio" value="Female" asp-for="Gender" /> Female</span>
                            <span class="m-3"><input type="radio" value="Other" asp-for="Gender" /> Other</span>

                        </div>
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <div class="fw-bold"><label asp-for="Address">Address</label></div>
                    <textarea class="form-control" asp-for="Address"></textarea>
                </div>
            </div>
            <br /><hr />

            <button type="submit" class="btn btn-success">
                Submit
            </button>
            <a type="submit" class="btn btn-secondary" asp-area="EMP_Employee" asp-controller="EMP_Employee" asp-action="Index">
                Back to List
            </a>
        </form>
    </div>
</section>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
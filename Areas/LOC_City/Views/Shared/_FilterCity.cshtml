@model FirstProject.Areas.LOC_City.Models.LOC_CityModel;

<form method="post">
    <div class="row">
        <div class="col-4">
            <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.List,"CountryID","CountryName"))">
                <option value="">Select Country</option>
            </select>
        </div>
        <div class="col-4">
            <select class="form-control" asp-for="StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))">
                <option value="">Select State</option>
            </select>
        </div>
        <div class="col-4">
            <input type="search" asp-for="CityName" class="form-control" placeholder="City Name">
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary fw-bold">Search</button>
        <a class="btn btn-secondary fw-bold" style="margin-left:7px" asp-area="LOC_City" asp-controller="LOC_City" asp-action="Cancel">Clear</a>
    </div>
</form>
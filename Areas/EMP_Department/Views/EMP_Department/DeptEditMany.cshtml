@{
    ViewData["Title"] = "DeptEditMany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FirstProject.Areas.EMP_Department.Models;
@model List<EMP_DepartmentModel>;



<section class="section">
    
    <div class="text-end">
        <a class="btn btn-outline-secondary mb-3" asp-area="EMP_Department" asp-controller="EMP_Department" asp-action="Index">Cancel</a>
    </div>

    <form method="post" asp-area="EMP_Department" asp-controller="EMP_Department" asp-action="EditManyPost">
        <table class="table">
            <thead>
                <tr>
                    <th>Department Name</th>
                    <th>Last Modified</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" class="form-control" name="Department[@i].DepartmentID" value="@Model[i].DepartmentID" />
                            <input type="text" class="form-control" name="Department[@i].DepartmentName" value="@Model[i].DepartmentName" />
                        </td>
                        <td>
                            <input type="text" class="form-control" name="Department[@i].Modified" value="@Model[i].Modified" readonly />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</section>

